<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- Header with Date Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp">

        <!-- Previous Day Button -->
        <ImageView
            android:id="@+id/btn_prev_day"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_left"
            app:tint="#FFFFFF"
            android:contentDescription="Previous Day"
            android:padding="2dp" />

        <!-- Date Text (Center) - Clickable to go to today -->
        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Today"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Next Day Button -->
        <ImageView
            android:id="@+id/btn_next_day"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="#FFFFFF"
            android:contentDescription="Next Day"
            android:padding="2dp" />

        <!-- Today Button -->
        <TextView
            android:id="@+id/btn_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ì˜¤ëŠ˜"
            android:textColor="#10B981"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="@drawable/widget_today_button_bg"
            android:layout_marginStart="8dp" />

        <!-- Task Count -->
        <TextView
            android:id="@+id/widget_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#4F46E5"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"/>

        <!-- Add Button -->
        <ImageView
            android:id="@+id/widget_add_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_add"
            app:tint="#4F46E5"
            android:layout_marginStart="8dp"
            android:contentDescription="Add Task" />
    </LinearLayout>

    <!-- Task List -->
    <ListView
        android:id="@+id/widget_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="4dp"
        android:scrollbars="none"
        android:listSelector="@android:color/transparent" 
        tools:listitem="@layout/widget_task_item"/>

    <!-- Empty View -->
    <TextView
        android:id="@+id/widget_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="No tasks for today ðŸŽ‰"
        android:textColor="#9CA3AF"
        android:textSize="14sp"
        android:visibility="gone" />

</LinearLayout>
